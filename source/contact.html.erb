<%= stylesheet_link_tag "contact" %>
<h1>Contact</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-offset-3 col-md-6">
      <div class="contact">
        <form action="https://formspree.io/your@email.com"
              method="POST">
            <div class="row">
              <label for="pays">Informations Générales*</label>
              <input type="hidden" name="_subject" value="Nouvelle demande" />
              <input type="text" name="nom" placeholder="Nom de famille" class="col-xs-12 col-md-6">
              <input type="text" name="prenom" placeholder="Prenom" class="col-xs-12 col-md-6">
            </div>
            <div class="row">
            <input type="email" name="_replyto" placeholder="@email" class="col-xs-12">
            <input type="tel" name="tel" placeholder="Numéro de téléphone" class="col-xs-12">
            <label>La date souhaitée pour votre rendez-vous ?*</label>
            <input type="date" name="date" class="col-xs-12">
            <label for="pays">Quelle prestation souhaitée ?*</label>
             <select name="prestation" id="prestation" class="col-xs-12">
               <option value="femme">Coupe Femme</option>
               <option value="homme">Coupe Homme</option>
               <option value="barbe">Taille de barbe</option>
               <option value="autre">Autre</option>
             </select>
            <textarea placeholder="Votre message..." name="textarea" class="col-xs-12" rows="10"></textarea>
            <input type="text" name="_gotcha" style="display:none" />
            <input type="submit" value="Envoyer" class="bouton-contact col-xs-12">
            </div>
        </form>
      </div>
    </div>
  </div>
</div>
